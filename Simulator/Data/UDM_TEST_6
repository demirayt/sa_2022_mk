%--------------------------------------------------------------------------
definitions:
%--------------------------------------------------------------------------
dynamic_states xTrigger1 xTrigger2 Sperrcounter Sperrstatus Sperre
dynamic_states Counter1 Counter2 CounterStatus1 CounterStatus2
inputs u1=1
internal_states du1
external_states yTrigger1 yTrigger2
events -!ev_Stufe1 -!ev_Stufe2 +!ev_Zeit1 +!ev_Zeit2
events +!ev_Sperre
parameters Ts1=0.2 Ts2=0.2 df1=0.4 df2=0.2 Sperrzeit=1
%--------------------------------------------------------------------------
initializations:
%--------------------------------------------------------------------------
 
%--------------------------------------------------------------------------
f_equations:
%--------------------------------------------------------------------------
dt(xTrigger1) = 0
dt(xTrigger2) = 0
dt(Sperrstatus) = 0
dt(Sperrcounter) = Sperrstatus
dt(Sperre) = 0
dt(CounterStatus1) = 0 
dt(Counter1) = CounterStatus1
dt(CounterStatus2) = 0 
dt(Counter2) = CounterStatus2

%-------------------------------------------------------------------------- 
g_equations:
%--------------------------------------------------------------------------
ev_Stufe1 = (du1 - df2)
ev_Stufe2 = (du1 - df1)
ev_Zeit1 = (Counter1 - Ts1)
ev_Zeit2 = (Counter2 - Ts2)
ev_Sperre = (Sperrcounter - Sperrzeit)

du1 = u1


yTrigger1 = Sperre * xTrigger1
yTrigger2 = Sperre * xTrigger2

%--------------------------------------------------------------------------
h_equations:
%--------------------------------------------------------------------------
if ev_Stufe1 == 0
	Counter1+ = 0
	CounterStatus1+ = 1
end
if ev_Zeit1 == 0
	Counter1+ = 0
	CounterStatus1+ = 0
	xTrigger1+ = 1
    Sperrcounter+ = 0
    Sperrstatus+ = 1
    Sperre+ = 0
end
if ev_Stufe2 == 0
	Counter2+ = 0
	CounterStatus2+ = 1
end
if ev_Zeit2 == 0
	Counter2+ = 0
	CounterStatus2+ = 0
	xTrigger2+ = 1
    Sperrcounter+ = 0
    Sperrstatus+ = 1
    Sperre+ = 0
end
if ev_Sperre == 0
    Sperre = 1
end